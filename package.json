{
  "name": "tinyenv",
  "version": "1.0.0",
  "description": "A lightweight library for environment variable management.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "format": "prettier \"**/*.{js,jsx,json,tsx,ts}\" --write",
    "lint": "eslint --cache .",
    "test": "vitest --run"
  },
  "author": {
    "name": "Jag Reehal",
    "email": "jag@jageehal.com"
  },
  "tags": [
    "environment-variables",
    "env"
  ],
  "keywords": [
    "environment-variables",
    "env",
    "typescript"
  ],
  "homepage": "https://github.com/jagreehal/tinyenv",
  "repository": {
    "type": "git",
    "url": "https://github.com/jagreehal/tinyenv"
  },
  "license": "MIT",
  "dependencies": {
    "@standard-schema/spec": "^1.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-unicorn": "^58.0.0",
    "pino": "^9.6.0",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0",
    "vitest": "^3.0.9"
  }
}
